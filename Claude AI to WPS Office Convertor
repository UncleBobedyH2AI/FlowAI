    <script>
        function showStatus(message, type = 'success') {
            const status = document.getElementById('status');
            status.textContent = message;
            status.style.display = 'block';
            status.className = 'status';
            
            if (type === 'error') {
                status.style.background = '#f8d7da';
                status.style.color = '#721c24';
                status.style.borderLeftColor = '#dc3545';
            } else {
                status.style.background = '#d4edda';
                status.style.color = '#155724';
                status.style.borderLeftColor = '#28a745';
            }
            
            setTimeout(() => {
                status.style.display = 'none';
            }, 3000);
        }

        function removeHtmlTags(text) {
            // Remove HTML tags
            return text.replace(/<[^>]*>/g, '');
        }

        function convertMarkdownToPlainText(text) {
            // Convert markdown to plain text
            return text
                // Headers
                .replace(/^#{1,6}\s*(.*$)/gm, '$1')
                // Bold text
                .replace(/\*\*(.*?)\*\*/g, '$1')
                .replace(/__(.*?)__/g, '$1')
                // Italic text
                .replace(/\*(.*?)\*/g, '$1')
                .replace(/_(.*?)_/g, '$1')
                // Code blocks
                .replace(/```[\s\S]*?```/g, '[CODE BLOCK]')
                // Inline code
                .replace(/`(.*?)`/g, '$1')
                // Links
                .replace(/\[([^\]]+)\]\([^\)]+\)/g, '$1')
                // Images
                .replace(/!\[([^\]]*)\]\([^\)]+\)/g, '[IMAGE: $1]')
                // Strikethrough
                .replace(/~~(.*?)~~/g, '$1')
                // Horizontal rules
                .replace(/^[-*_]{3,}$/gm, '---');
        }

        function convertLists(text) {
            return text
                // Unordered lists
                .replace(/^[\s]*[-*+]\s+(.*)$/gm, '‚Ä¢ $1')
                // Ordered lists
                .replace(/^[\s]*\d+\.\s+(.*)$/gm, '‚Ä¢ $1')
                // Nested lists (simple conversion)
                .replace(/^[\s]{2,}[-*+]\s+(.*)$/gm, '  ‚óã $1')
                .replace(/^[\s]{2,}\d+\.\s+(.*)$/gm, '  ‚óã $1');
        }

        function preserveBasicStructure(text) {
            // Add extra line breaks for better readability
            return text
                // Ensure paragraph breaks
                .replace(/\n\s*\n/g, '\n\n')
                // Clean up multiple spaces
                .replace(/[ \t]+/g, ' ')
                // Clean up multiple line breaks (max 2)
                .replace(/\n{3,}/g, '\n\n');
        }

        function cleanWhitespace(text) {
            return text
                // Remove leading/trailing whitespace from lines
                .replace(/^[ \t]+|[ \t]+$/gm, '')
                // Remove multiple spaces
                .replace(/[ \t]{2,}/g, ' ')
                // Remove empty lines at start and end
                .trim();
        }

        function convertText() {
            const inputText = document.getElementById('inputText').value;
            
            if (!inputText.trim()) {
                showStatus('Please paste some text to convert!', 'error');
                return;
            }

            let convertedText = inputText;

            // Apply conversions based on selected options
            if (document.getElementById('removeHtml').checked) {
                convertedText = removeHtmlTags(convertedText);
            }

            if (document.getElementById('convertMarkdown').checked) {
                convertedText = convertMarkdownToPlainText(convertedText);
            }

            if (document.getElementById('convertLists').checked) {
                convertedText = convertLists(convertedText);
            }

            if (document.getElementById('preserveStructure').checked) {
                convertedText = preserveBasicStructure(convertedText);
            }

            if (document.getElementById('cleanWhitespace').checked) {
                convertedText = cleanWhitespace(convertedText);
            }

            // Additional WPS Office specific cleaning
            convertedText = convertedText
                // Remove citation tags
                .replace(/]*>(.*?)<\/antml:cite>/g, '$1')
                // Remove function call blocks
                .replace(/<function_calls>[\s\S]*?<\/antml:function_calls>/g, '')
                // Clean up any remaining XML-like tags
                .replace(/<\/?[^>]+>/g, '')
                // Normalize quotes
                .replace(/[""]/g, '"')
                .replace(/['']/g, "'")
                // Clean up bullet points
                .replace(/^[‚Ä¢¬∑‚ñ™‚ñ´‚ó¶‚Ä£‚ÅÉ]\s*/gm, '‚Ä¢ ')
                // Ensure consistent line endings
                .replace(/\r\n/g, '\n')
                // Final cleanup
                .trim();

            document.getElementById('outputText').value = convertedText;
            
            const wordCount = convertedText.split(/\s+/).length;
            showStatus(`‚úÖ Conversion complete! ${wordCount} words ready for WPS Office.`);
        }

        function clearAll() {
            document.getElementById('inputText').value = '';
            document.getElementById('outputText').value = '';
            showStatus('üóëÔ∏è All text cleared.');
        }

        function copyOutput() {
            const outputText = document.getElementById('outputText');
            
            if (!outputText.value.trim()) {
                showStatus('Nothing to copy! Please convert some text first.', 'error');
                return;
            }

            outputText.select();
            outputText.setSelectionRange(0, 99999); // For mobile devices

            try {
                document.execCommand('copy');
                showStatus('üìã Text copied to clipboard! Ready to paste into WPS Office.');
            } catch (err) {
                // Fallback for modern browsers
                navigator.clipboard.writeText(outputText.value).then(() => {
                    showStatus('üìã Text copied to clipboard! Ready to paste into WPS Office.');
                }).catch(() => {
                    showStatus('‚ùå Copy failed. Please select and copy manually.', 'error');
                });
            }
        }

        // Auto-convert when text is pasted
        document.getElementById('inputText').addEventListener('paste', function() {
            setTimeout(() => {
                convertText();
            }, 100);
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'Enter':
                        e.preventDefault();
                        convertText();
                        break;
                    case 'k':
                        e.preventDefault();
                        clearAll();
                        break;
                }
            }
        });

        // Show helpful tips
        window.addEventListener('load', function() {
            showStatus('üí° Tip: Paste Claude\'s response and click Convert, or just paste and it will auto-convert!');
        });
    </script>
</body>
